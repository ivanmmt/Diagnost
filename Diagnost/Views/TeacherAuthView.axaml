<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             Width="300" 
             Height="550"
             x:Class="Diagnost.Views.TeacherAuthView"
             Background="DeepSkyBlue"
             Foreground="Black">
    
    <StackPanel Margin="30">
        
        <StackPanel Margin="0, 0, 0, 10">
            <TextBlock Text="Email" Margin="0,0,0,10" />
            <TextBox x:Name="email" 
                     TextWrapping="NoWrap" 
                     TextInputOptions.ContentType="Email"
                     TextInputOptions.ReturnKeyType="Next"
                     AcceptsReturn="False"/>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="Пароль" Margin="0 10 0 0"/> 
            
            <Grid ColumnDefinitions="*, Auto">
                <TextBox 
                    x:Name="PasswordInput" 
                    Grid.ColumnSpan="2"  
                    PasswordChar="*" 
                    TextInputOptions.ContentType="Password"
                    TextInputOptions.ReturnKeyType="Done"
                    Watermark="Пароль"
                    HorizontalAlignment="Stretch"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Margin="0"/>
                
                <Button 
                    Grid.Column="1" 
                    Classes="flat" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0 0 5 0" 
                    Click="TogglePasswordVisibility">
                    <TextBlock Text="👁️" VerticalAlignment="Center" FontSize="14"/>
                </Button>
            </Grid>
        </StackPanel>
        <StackPanel>
            <Button Content="Увійти" Click="Button_OnClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>
